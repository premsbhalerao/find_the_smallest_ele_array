public class Main {
  public static void main(String[] args) {
    int ages[] = {21, 29, 17, 40, 48, 26, 87, 70};
    float avg, sum = 0;
    int length = ages.length;
    int lowestAge = ages[0];
    for (int age : ages) {
      if (lowestAge > age) {
        lowestAge = age;
      }
    }
    System.out.println("The lowest age in the array is: " + lowestAge);
  }
}
